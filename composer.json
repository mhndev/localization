{
  "name": "mhndev/localization",
  "description": "Php localization",
  "keywords": [
    "language", "i18n", "localization"
  ],
  "homepage": "http://github.com/mhndev/localization",
  "license": "MIT",
  "authors": [
    {
      "name": "Majid Abdolhosseini",
      "email": "majid@mhndev.com",
      "homepage": "http://www.mhndev.com/"
    }
  ],

  "require": {
    "php": ">=5.6.0",
    "psr/http-message": "~1.0",
    "ext-intl": "*"
  },

  "require-dev": {
    "phpunit/phpunit": "6.*",
    "mikey179/vfsStream": "1.6.*",
    "guzzlehttp/guzzle":"~6.0"
  },

  "autoload": {
    "psr-4": {
      "mhndev\\localization\\": "src"
    },
    "files":[
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  }
}
